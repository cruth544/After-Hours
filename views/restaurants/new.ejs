<form method="post" action="/restaurants/create">

  <!-- Venue Name -->
  <div>
    <strong>Name:</strong>
    <input type="text" name="name" placeholder="Enter your venue name...">
  </div>

  <!-- Happy Hour Days + Times -->
  <div>
    <strong>Happy Hour Days + Times:</strong>
      <br>
      <input type="checkbox" name="hours" value="day">Monday
      <input type="checkbox" name="hours" value="day">Tuesday
      <input type="checkbox" name="hours" value="day">Wednesday
      <input type="checkbox" name="hours" value="day">Thursday
      <input type="checkbox" name="hours" value="day">Friday
      <input type="checkbox" name="hours" value="day">Saturday
      <input type="checkbox" name="hours" value="day">Sunday
      <br>
    <strong>Start Time:</strong><input type="time" name="usr_time">
    <strong>End Time:</strong><input type="time" name="usr_time">
    <input type="submit">
  </div>

  <!-- Restaurant Information -->
  <div>
    <strong>Venue Info</strong>
    <br>
    <label>Address</label>
    <input type="text" name="address" placeholder="123 Street City, State Zipcode">

    <label>Phone</label>
    <input type="text" name="phone" placeholder="(123) 456-7890">

    <label>Website</label>
    <input type="url" name="homepage" placeholder="www.your_website.com">

    <label>Yelp Page</label>
    <input type="url" name="homepage" placeholder="www.yelp.com/...">
  </div>

  </div>

  <!-- Business Owner? -->
  <label>Are you the owner of this venue?
  <input type="radio" name="owner" value="yes">Yes
  <input type="radio" name="owner" value="no" checked>No

  <!-- Submit -->
  <div>
    <input type="submit" value="Submit">
  </div>


</form>
