<div class="containerSignup">
  <!-- Trigger the modal with a button -->

  <!-- Modal Signup -->
  <div class="modal fade" id="mySignupModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <!-- <form class="form-container" id="intro"> -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"></button>
          <h4 class="modal-title">CREATE AN ACCOUNT</h4>
        </div>
        <div class="modal-body">
          <form role="form" action="/signUp" method="post">
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input type="password" class="form-control" id="email" name="password" placeholder="Enter Password">
            </div>
            <div class="checkbox">
              <label id = "checkbox"><input type="checkbox">Remember me</label>
              <!-- facebook log in button -->
              <a href='/auth/facebook'><img src = "../../../public/assets/facebook-button-sign-up.png" id="facebookLogin"></a>
            </div>
            <button id="submit" type="submit" class="btn btn-default">Submit</button>
          </form>
        </div>
      <!-- </form> -->
      </div>
    </div>
</div>
</div>
