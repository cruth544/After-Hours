      <!-- Modal content-->
<head>
  <link rel="stylesheet" type="text/css" href="/public/css/restaurant_form.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<link href='https://fonts.googleapis.com/css?family=Fredoka+One|Montserrat' rel='stylesheet' type='text/css'>
</head>

<div id="newHappyHourContainer">
<!-- Modal New Happy Hour -->
  <div id="HHModal" class="modal fade" role="dialog">
    <div class="modal-dialog">


<div id = "addHappyHourTitle">ADD A HAPPY HOUR</div>
<form class="form-container">
 <!-- VENUE NAME -->
  <div class="form-group">
    <label>VENUE NAME:</label>
    <input type="text" class="form-control" name="name" placeholder="Venue name...">
  </div>
  <!-- IMAGE LINK -->
  <div class="form-group">
    <input type="text" class="form-control" name="image" placeholder="Enter image URL">
  </div>
  <!-- TEXT AREA -->
  <div class="form-group">
  <textarea class="form-control" rows="3" placeholder="Enter a description of your happy hour here!"></textarea>
  </div>
  <!-- HAPPY HOUR DAYS -->
    <strong>HAPPY HOUR SCHEDULE:</strong>
    <div>
      <input type="checkbox" name="monday" value="true"><label>Monday</label><br>
      <input type="checkbox" name="tuesday" value="true"><label>  Tuesday</label><br>
      <input type="checkbox" name="wednesday" value="true"><label>  Wednesday</label><br>
      <input type="checkbox" name="thursday" value="true"><label>  Thursday</label><br>
      <input type="checkbox" name="friday" value="true"><label>  Friday</label><br>
      <input type="checkbox" name="saturday" value="true"><label>  Saturday</label><br>
      <input type="checkbox" name="sunday" value="true"><label>  Sunday</label>
  </div>
  <!-- TIMES -->
  <div class="form-group">
     <strong>Starts at:  </strong><input type="time" class="time" name="start_time">
     <strong>Ends at:  </strong><input type="time" class="time" name="end_time"></br>
  </div>
  <!-- Drinks/Food -->
    <strong>Happy Hour includes:</strong>
  <div>
    <input type="checkbox" name="drinks" value="true">
    <label>Drinks</label>
    <input type="checkbox" name="food" value="true">
    <label>Food</label>
  </div>

  <!-- Restaurant Information -->
  <strong>VENUE INFORMATION:</strong>
  <!-- Address -->
  <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" name="address" placeholder="123 Street City, State Zipcode">
  </div>

  <!-- Phone -->
  <div class="form-group">
    <label>Contact Number</label>
    <input type="text" class="form-control" name="phone" placeholder="(123) 456-7890">
  </div>
  <!-- Website -->
  <div class="form-group">
    <label>Website</label>
    <input type="url" value="http://" class="form-control" placeholder="http://www.your_website.com">
  </div>
  <!-- Yelp -->
  <div class="form-group">
    <label>Yelp Page</label>
    <input type="url" value="http://" class="form-control" placeholder="www.yelp.com/...">

  </div>


  <!-- SUBMIT -->
  <input id ="newRestaurantButton" type="submit" value="SAVE">

</form>

    </div>

  </div>
</div>

